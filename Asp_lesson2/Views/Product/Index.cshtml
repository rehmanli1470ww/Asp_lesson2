@model ProductListViewModel

@foreach(var item in Model.Products)
{
    
    <div class="card" style="width: 22rem;background-color:chocolate;margin:10px;display:inline-block">
        
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Name : @item.Name</li>
            <li class="list-group-item">Description : @item.Description</li>
            <li class="list-group-item">Price : @item.Price</li>
            <li class="list-group-item">Discount : @item.Discount</li>
            
        </ul>
        <div class="card-body">
            <a class="card-link" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete Product</a>
            <a class="card-link" href="@Url.Action("Update", "Product", new { id = item.Id })">Update Product</a>
        </div>
    </div>
   
   
}
